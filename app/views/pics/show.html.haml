#pic_show.row
  .col-md-6.col-md-offset-3
    .panel.apnel-default
      .panel.heading.pic_image
        = image_tag @pic.image.url
      .panel-body
        %h1= @pic.title
        %p= @pic.description
      .panel-footer
        .row
          .col-md-6
            %p.user
              by
              = @pic.user.email
          .col.md-6
            .btn-group.pull-right
              = link_to Like_pic_path(@pic), method: :put, class: "btn btn-default" do
                %span.glyphicon.glyphicon-fire
                = @pic.get_upvotes.size

              - if current_user.id == @pic.user.id
                = link_to "Edit Picture", edit_pic_path, class: "btn btn-info"
                = link_to "Move to Trash", pic_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger"
